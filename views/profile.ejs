<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-black text-white py-5">
    <div class="nav flex justify-between items-center px-4">
      <h3 class="text-lg">
        <%= user.username %>
          <a href="/logout"><i class="ri-arrow-down-s-line"></i></a>
      </h3>
      <div class="icons flex gap-5">
        <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
        <i class="text-[1.4rem] ri-menu-line"></i>
      </div>
    </div>
    <div class="flex place-content-end justify-between items-center pl-4 pr-[8vw] mt-8">
      <div class="w-[19vw] h-[19vw] bg-zinc-800 rounded-full overflow-hidden">
        <img class="w-full h-full object-cover bg-zinc-800 text-zinc-800" src="/images/uploads/<%= user.profileImage %>"
          alt="rutrjyjyjytrjydjtj" />
      </div>
      <div class="stats flex gap-4 items-center justify-between">
        <div class="flex flex-col items-center justify-center">
          <h3>
            <%= user.posts.length %>
          </h3>
          <h4>Posts</h4>
        </div>
        <div class="flex flex-col items-center justify-center">
          <h3>0</h3>
          <h4>Followers</h4>
        </div>
        <div class="flex flex-col items-center justify-center">
          <h3>0</h3>
          <h4>Following</h4>
        </div>
      </div>
    </div>
    <div class="dets px-4 mt-4">
      <h3 class="text-sm mb-1">
        <%= user.name%>
      </h3>
      <p class="text-xs tracking-tight opacity-50">
        <%= user.bio%>
      </p>
    </div>
    <div class="px-4 mt-4">
      <a class="px-6 py-2 bg-zinc-800 text-xs rounded-md" href="/edit">Edit Profile</a>
    </div>
    <div class="posts w-full flex gap-1 py-2 mt-5 flex-wrap">
      <% user.posts.forEach(function(post){ %>
        <div class="post w-[32.5%] h-32 bg-white-100 overflow-hidden">
          <img class="h-full w-full object-cover" src="/images/uploads/<%= post.picture %>" alt="" />
        </div>
        <% }) %>
    </div>
  </div>
  <% include ./partials/footer.ejs %>