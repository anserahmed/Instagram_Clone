<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-black text-white py-5">
    <div class="flex justify-between items-center px-4">
      <a class="text-sm text-blue-500" href="/profile"><i class="ri-arrow-left-s-line"></i> Profile</a>
      <h2 class="leading-none text-sm">Edit Profile</h2>
      <a class="text-sm" href="/feed"><i class="ri-home-line"></i> Home</a>
    </div>
    <div class="flex flex-col items-center gap-2 mt-20">
      <div class="image w-20 h-20 bg-zinc-800 rounded-full"></div>
      <button id="editbtn" class="text-blue-500 text-sm">Edit picture or avatar</button>
    </div>
    <div class="gap-5 px-6 mt-9">
      <!-- <h3 class="text-lg px-3 leading-none">Edit Account Details</h3> -->

      <form class="w-full mt-3 px-3" action="/update" method="post" enctype="multipart/form-data">
        <input hidden type="file" id="imageinput" name="image">


        <label class="text-sm text-zinc-400">Name</label>
        <input class=" mt-0 py-1 rounded-md outline-none w-full bg-black" type="text" placeholder="" name="name" value="<%= user.name %>">
        <hr class="opacity-30 mt-0 mb-4">

        <label class="text-sm text-zinc-400">Username</label>
        <input class=" mt-0 py-1 rounded-md outline-none w-full bg-black" type="text" placeholder="" name="username" value="<%= user.username %>">
        <hr class="opacity-30 mt-0 mb-4">

        <label class="text-sm text-zinc-400">Bio</label>
        <input class=" mt-0 py-1 rounded-md outline-none w-full bg-black" type="text" placeholder="" name="bio" value="<%= user.bio %>">

       <hr class="opacity-30 mt-0 mb-2">
      
      <input class="w-full bg-blue-500 px-3 py-3 rounded-md mt-2" type="submit" value="Update Details">
      </form>
    </div>
  </div>

  <script>
 document.querySelector("#editbtn")
  .addEventListener("click",function(){
 document.querySelector("#imageinput").click();
  })
 
  </script>
<% include ./partials/footer.ejs %>