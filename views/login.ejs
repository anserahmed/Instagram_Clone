<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-black text-white py-5 flex flex-col items-center justify-center">
    <div class="flex flex-col items-center gap-5 px-4">
      <img class="w-1/2" src="/images/image.png" alt="">

      <% if (error.length > 0){ %>
        <p class="text-sm text-white opacity-50"><%= error %></p>
      <% }%>

          <form class="w-full px-5" action="/login" method="post">
            <input class="px-3 mt-2 py-2 outline-none  border-zinc-800 rounded-md block w-full bg-zinc-900" type="text"
              placeholder="Username" name="username">
            <input class="px-3 mt-2 py-2 outline-none  border-zinc-800 rounded-md block w-full bg-zinc-900"
              type="password" placeholder="Password" name="password">
            <input class="w-full bg-blue-500 px-3 py-3 rounded-md mt-2" type="submit" value="Log In">
          </form>
          <span>Don't have an account ? <a href="/" class="text-blue-500">Sign Up</a></span>
    </div>
  </div>
  <% include ./partials/footer.ejs %>